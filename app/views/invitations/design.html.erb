<h1>デザインの種類</h1>

<!-- ========== MAIN ========== -->
<main id="content" role="main" class="" style="">
  <div class="container text-center">
    <div class="row">
      <div class="col-4">
        <h2 class="mb-0" style="">STEP1</h2>
        <div class="w-25 step-border mb-3" style=""></div>
        <p class="">イベント形式の選択</p>
      </div>
      <div class="col-4">
        <h2 class="">STEP2</h2>
      </div>
      <div class="col-4">
        <h2 class="">STEP3</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= link_to invitation_path(@invitation, :invitation => {design_id: 1}), method: "PATCH" do %>
        <div class="step-card p-4 m-6 mx-auto">
          <img src="/step_icon/1.png" width="" class="w-50 mt-4">
          <p class="mt-4">テンプレ１</p>
        </div>
        <% end %>
      </div>
      <div class="col-6">
        <%= link_to invitation_path(@invitation, :invitation => {design_id: 2}), method: "PATCH" do %>
        <div class="step-card p-4 m-6 mx-auto">
          <img src="/step_icon/2.png" width="" class="w-50 mt-4">
          <p class="mt-4">テンプレ２</p>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= link_to invitation_path(@invitation, :invitation => {design_id: 3}), method: "PATCH" do %>
        <div class="step-card p-4 m-6 mx-auto">
          <img src="/step_icon/3.png" width="" class="w-50 mt-4">
          <p class="mt-4">テンプレ３</p>
        </div>
        <% end %>
      </div>
      <div class="col-6">
        <%= link_to invitation_path(@invitation, :invitation => {design_id: 4}), method: "PATCH" do %>
        <div class="step-card p-4 m-6 mx-auto">
          <img src="/step_icon/4.png" width="" class="w-50 mt-4">
          <p class="mt-4">テンプレ４</p>
        </div>
        <% end %>
      </div>
    </div>
    <div>
      <%= link_to "OK", invitations_path, class:"btn btn-sm btn-primary pl-8 pr-8" %>
    </div>
  </div>
</main>
