<%= link_to "招待状編集TOPへ", invitation_path(id: @invitation) %>

<%= form_for(@invitation, url: invitation_path, method: "PATCH") do |f| %>
<%= render 'shared/error_messages', model: @invitation %>

<!-- ========== MAIN ========== -->
<main id="content" role="main" class="" style="">
  <div class="container text-center">
    <div class="row">
      <div class="col-4"></div>
      <div class="col-4">
        <h2 class="mb-0" style="">出欠フォーム編集</h2>
        <div class="w-50 step-border mb-3" style=""></div>
      </div>
      <div class="col-4"></div>
    </div>

    <div class="inv-date_place">
      <div class="row mt-4">
        <div class="col-sm-4">
          <p class="text-primary"><%= f.label "回答期限" %></p>
        </div>
        <div class="text-left col-sm-8">
          <div class="" style="">
            <%= f.text_field :date1, class:"w-80 p-2",id:"date_sample" %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">
                回答期限を設定しない
              </label>
            </div>
          </div>
        </div>
      </div>


      <div class="row mt-4">
        <div class="col-sm-4">
          <p class="text-primary"><%= f.label "フォーム用挨拶文" %></p>
        </div>
        <div class="text-left col-sm-8">
          <div class="" style="">
            <%= f.text_field :address1, value:"お手数ではございますが、出席情報のご記入をお願い申し上げます。", class:"w-80 p-2" %><!-- 送り先を編集してください！！！ to_立花さん -->
          </div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-sm-4">
          <p class="text-primary"><%= f.label "フォーム回答項目" %></p>
        </div>
        <div class="text-left col-sm-8">
          <div class="" style="">
            <div class="row">
              <div class="col-sm-4">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                  <label class="form-check-label" for="defaultCheck1">
                    お名前
                  </label>
                </div>
              </div>
              <div class="col-sm-8">

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="mt-9">
      <%= f.submit "保存", class:"btn btn-sm btn-primary pl-8 pr-8" %><br>
      <%= link_to "戻る", invitation_path(id: @invitation), class:"btn btn-sm btn-secondary pl-8 pr-8 mt-4" %>
    </div>

  </div>
</main>


<!-- bootstrap-datepickerのjavascriptコード -->
<script>
    $('#date_sample').datepicker({
        language:'ja',
        format: 'yyyy/mm/dd'
    });
</script>


<% end %>
